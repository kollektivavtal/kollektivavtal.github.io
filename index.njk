{% from "h1.njk" import h1 %}

<div class="mb-8 flex flex-col gap-y-4">
  {{ h1(site.title, "") }}

  <div class="prose flex flex-col gap-y-2">
    <p>{{ site.description }}</p>

    <p>
      Skicka g√§rna saknade avtal till
      <a class="text-blue-600 underline" href="mailto:henry@catalinismith.com"
        >henry@catalinismith.com</a
      >.
    </p>
  </div>
</div>

<section class="mb-16 flex flex-col space-y-4">
  <h2 class="text-xl font-bold">Senaste Avtal</h2>
  <table class="">
    <thead class="sr-only">
      <tr>
        <th></th>
        <th>Namn</th>
      </tr>
    </thead>

    <tbody class="flex flex-col space-y-4">
      {% for agreement in collections.mostRecentAgreements %}
        <tr>
          <td>
            <div class="aspect-[707/1000] shrink-0 border-2 border-slate-200">
              <img alt="" src="{{ agreement.icon }}" />
            </div>
          </td>

          <td>
            <div class="ml-4 flex flex-col">
              <a class="text-blue-600 underline" href="{{ agreement.url }}">
                {{ agreement.title }}
              </a>
              <span
                class="mt-1 max-w-full overflow-hidden text-sm leading-6 text-gray-700"
              >
                Tillagd {{ agreement.lastmod.split("T")[0] }}
              </span>
            </div>
          </td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
</section>

<section class="flex flex-col space-y-4">
  <h2 class="text-xl font-bold">√Ör</h2>
  <ol class="flex flex-col space-y-4">
    {% for year in collections.years %}
      <li>
        <div class="flex flex-col">
          <a class="text-blue-600 underline" href="/{{ year.name }}">
            {{ year.name }}
          </a>
          <span class="max-w-full overflow-hidden text-sm text-gray-700">
            {{ year.agreements.length }} avtal
          </span>
        </div>
      </li>
    {% endfor %}
  </ol>
</section>
