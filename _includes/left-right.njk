<!doctype html>
<html lang="sv">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="{{ '/tailwind.css' | url }}" />
    <title>Kollektivavtalsarkivet</title>
  </head>

  <body class="font-sans">
    <div class="relative flex flex-col md:h-screen md:flex-row">
      <div
        class="relative left-0 top-0 flex h-1/2 min-h-[50vh] w-full items-center justify-center bg-black bg-[radial-gradient(circle_at_center_bottom,rgba(10,19,44,1)_0%,rgba(5,9,15,1)_80%)] p-4 text-center text-white md:fixed md:h-full md:w-1/2 md:bg-[radial-gradient(200%_200%_at_top_right,rgba(10,19,44,1)_0%,rgba(5,9,15,1)_62%)]"
      >
        {% block left %}
        {% endblock %}
      </div>

      <div class="relative h-1/2 w-full p-4 md:ml-auto md:h-full md:w-1/2">
        {% block right %}
        {% endblock %}
      </div>
    </div>
  </body>
</html>
